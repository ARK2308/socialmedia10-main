            </div>
  </div>
  <script>
    // GSAP animation
    window.addEventListener('load', () => {
        const timeline = gsap.timeline();

        timeline.from(".nav-item", {
            duration: 0.5,
            x: (index) => index % 2 === 0 ? '-100%' : '100%', // Alternate left and right
            opacity: 0,
            stagger: 0.2
        })
        .from(".image-section", {
          duration: 0.5,
            x: (index) => index % 2 === 0 ?  // Alternate left and right
            opacity: 0,
            stagger: 0.2
        });
    });

    // image slider
       // Function to start the image slider
       function startSlider() {
            const slides = document.querySelectorAll(".image-slider div");
            let currentSlide = 0;

            function showNextSlide() {
                gsap.to(slides[currentSlide], { duration: 1, opacity: 0 });
                currentSlide = (currentSlide + 1) % slides.length;
                gsap.to(slides[currentSlide], { duration: 1, opacity: 1 });
            }

            setInterval(showNextSlide, 1000); // Change image every 1 second
        }

        // Start the slider after the window loads
        window.addEventListener('load', () => {
            const slides = document.querySelectorAll(".image-slider div");
            gsap.to(slides[0], { duration: 1, opacity: 1, onComplete: startSlider });
        });
</script>

</body>


