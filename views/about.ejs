    <body class="bg-black text-white">

    
  
      <div class="container mx-auto py-20">
          <div class="text-center">
              <h1 class="text-5xl font-bold mb-4">About Us</h1>
              <p class="text-xl mb-8">We are passionate about tech, creativity, and innovation. Sharing insights, stories, and ideas to inspire and connect with like-minded individuals.</p>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="image-container">
                <img src="https://images.unsplash.com/photo-1496366362927-a03e3e01416a?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Image 1" class="rounded shadow-lg">
            </div>
            <div class="image-container">
                <img src="https://images.unsplash.com/photo-1517398747128-cd2271140a0b?q=80&w=1378&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Image 2" class="rounded shadow-lg">
            </div>
            <div class="image-container">
                <img src="https://images.unsplash.com/photo-1501281668745-f7f57925c3b4?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Image 3" class="rounded shadow-lg">
            </div>
        </div>
      </div>
  
      
  
 
      <script>
document.addEventListener('DOMContentLoaded', () => {
    // Animate the heading
    gsap.from("h1", { duration: 1, y: -50, opacity: 0, ease: "bounce" });

    // Animate the paragraph
    gsap.from("p", { duration: 1, y: 50, opacity: 0, delay: 0.5, ease: "power2.out" });

    // Additional animation examples (optional)
    // gsap.from(".container", { duration: 1, scale: 0.5, opacity: 0, delay: 1, ease: "power2.out" });
    // gsap.from("nav a", { duration: 1, x: -100, opacity: 0, stagger: 0.2, ease: "power2.out" });
    const images = document.querySelectorAll(".image-container img");
    images.forEach((image, index) => {
        gsap.from(image, { duration: 1, x: 100 * (index % 2 === 0 ? 1 : -1), opacity: 0, delay: 1 + index * 0.2, ease: "power2.out" });
    });
});
      </script>
