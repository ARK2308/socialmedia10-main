  <style>
    body{
      background-color: black;
    }
  
    .icon-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
      color: rgb(97, 97, 97); 
      transition: color 0.3s;
    }
  
    .icon-container a {
      display: block;
      margin-top: 4px;
      color: rgb(97, 97, 97);
      text-decoration: none;
      transition: color 0.3s;
    }
  
    .icon-container i {
      color:rgb(97, 97, 97);
      transition: color 0.3s;
    }
  
    .icon-container:hover,
    .icon-container a:hover,
    .icon-container i:hover {
      color: #5dade2;
    }
  
   
  </style>
  
  <div class="container w-[100%] bg-black  h-screen flex gap-3">
    <!-- Left Sidebar -->
    <div class="leftarea1 w-56 h-[95%] border-current bg-zinc-800 mt-4 rounded-lg ml-5 flex flex-col">
      <div class="group1 h-36">
        <div class="flex items-center space-x-2 mt-5">
          <!-- Camera Icon -->
        
          <!-- Logo Text -->
          <h1 style="font-family: Georgia, 'Times New Roman', Times, serif;" class="text-3xl ml-[12%] mt-[15%] font-bold text-black ">SnapWave</h1>
          <!-- Wave Icon -->
         
      </div>
      </div>
      <div class="group2 h-96 flex flex-col mt-[45%] items-center gap-5">
        <div class="icon-container">
          <i class="ri-home-2-fill text-2xl"></i>
          <a href="/" class="text-xs font-bold">Home</a>
        </div>
        <div class="icon-container">
          <i class="ri-message-2-fill text-2xl"></i>
          <a href="/contact" class="text-xs font-bold">Contact</a>
        </div>
        <div class="icon-container">
          <i class="ri-account-pin-circle-fill text-2xl"></i>
          <a href="/about" class="text-xs font-bold">About</a>
        </div>
     
     
      </div>
    </div>
    <!-- Right Sidebar -->
     
      <div class="rightarea1 w-[80%] ml-[6%]  h-[90%] mt-[3%] border-current rounded-3xl 0">
        <div class=" mt-[5%] ml-[5%]  container bg-zinc-600 rounded-3xl shadow-2xl w-full max-w-4xl min-h-[480px] relative overflow-hidden">
          <div class="form-container sign-up absolute top-0 h-full w-1/2 transition-all ease-in-out duration-600">
              <form class="flex flex-col items-center justify-center h-full px-10"  action="/user/register" method="post">
                  <h1 class="text-3xl font-bold mb-5">Create Account</h1>
                  <div class="social-icons flex space-x-3 mb-5">
                      <a href="#" class="icon flex items-center justify-center w-10 h-10 border rounded-full border-gray-300"><i class="fa-brands fa-google-plus-g"></i></a>
                      <a href="#" class="icon flex items-center justify-center w-10 h-10 border rounded-full border-gray-300"><i class="fa-brands fa-facebook-f"></i></a>
                      <a href="#" class="icon flex items-center justify-center w-10 h-10 border rounded-full border-gray-300"><i class="fa-brands fa-github"></i></a>
                      <a href="#" class="icon flex items-center justify-center w-10 h-10 border rounded-full border-gray-300"><i class="fa-brands fa-linkedin-in"></i></a>
                  </div>
                  <span class="text-sm mb-5">Register User</span>
            
                  <input type="text"   name="username"   placeholder="UserName" class="input mb-3 w-full py-3 px-4 rounded-lg bg-gray-100">
                  <input type="email"   name="email"   placeholder="example@email.com" class="input mb-3 w-full py-3 px-4 rounded-lg bg-gray-100">
                  <input type="password"  name="password"    placeholder="Password" class="input mb-5 w-full py-3 px-4 rounded-lg bg-gray-100">
                  <button class="btn bg-gradient-to-r from-black to-zinc-500 text-white py-3 px-12 rounded-lg font-semibold uppercase">Register</button>
                  <p class="mt-3">Already have an account ? <a class=" text-blue-400" href=" /login">Login</a></p>
              </form>
                  <!-- <button class="mb-5 hover:bg-red-400 w-1/2 bg-red-300 px-5 py-2 text-white rounded" >Login User</button> -->
               
            
          </div>

          <div class="toggle-container absolute top-0 left-1/2 h-full w-1/2 overflow-hidden transition-all ease-in-out duration-600 bg-purple-700 text-white z-50">
            <div class="toggle h-full bg-gradient-to-r from-black to-zinc-500 text-white absolute -left-full h-full w-[200%] transition-all ease-in-out duration-600">
                <div class="toggle-panel toggle-left absolute w-1/2 h-full flex flex-col items-center justify-center px-8 text-center transform transition-all ease-in-out duration-600 -translate-x-full">
                    <h1 class="text-3xl font-bold"></h1>
                    <p class="mt-4 mb-6"></p>
                    <button class="btn hidden bg-transparent border border-white text-white py-3 px-8 rounded-lg font-semibold uppercase" id="login">Sign In</button>
                </div>
                <div class="toggle-panel toggle-right absolute right-0 w-1/2 h-full flex flex-col items-center justify-center px-8 text-center transform transition-all ease-in-out duration-600">
                    <h1 class="text-3xl font-bold">>Hello, Friend!</h1>
                    <p class="mt-4 mb-6 ">Register with your personal details to use all of site features</p>
                 
                </div>
            </div>
        </div>
    </div>

        

